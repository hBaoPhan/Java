		nhanVienDao=new NhanVien_DAO();
		
		phongBanDao=new PhongBan_DAO();
		
		themDuLieuVaoComboBox();
		
		themDuLieuVaoTable(nhanVienDao.getAll());
		
	}

	public static void main(String[] args) {
		new NhanVien_GUI2().setVisible(true);
	}
	public void themDuLieuVaoComboBox() {
		cboPhongBan.removeAllItems();
		for (PhongBan pb : phongBanDao.getAllPhongBan()) {
			cboPhongBan.addItem(pb.getMa());
		}
	}
	public void themDuLieuVaoTable(ArrayList<NhanVien> ds) {
		modelNhanVien.getDataVector().removeAllElements();
		for (NhanVien nhanVien : ds) {
			modelNhanVien.addRow(new Object[] {nhanVien.getMa(),nhanVien.getHo(),nhanVien.getTen(),nhanVien.getTuoi(),nhanVien.isPhai()?"Nam":"Nữ",nhanVien.getTienLuong(),nhanVien.getPhongBan().getMa()});
		}
		modelNhanVien.fireTableDataChanged();
	}
	public void xoaTrang() {
		txtMaNV.setText("");
		txtHo.setText("");
		txtTen.setText("");
		txtTuoi.setText("");
		txtTienLuong.setText("");
		cboPhongBan.setSelectedIndex(0);
		chkNu.setSelected(false);
		txtMaNV.setEditable(true);
	}
	public boolean checkValidData() {
		String ma=txtMaNV.getText().trim();
		String ho=txtHo.getText().trim();
		String ten=txtTen.getText().trim();
		int tuoi;
		double luong;
		if(!ma.matches("NV\\d{3}")){
			JOptionPane.showMessageDialog(this, "Mã phải đúng dạng NVXXX trong đó X là số");
			txtMaNV.requestFocus();
			txtMaNV.selectAll();
			return false;
		}
		else if(!ho.matches("[\\w ]+")) {
			JOptionPane.showMessageDialog(this, "Họ chỉ được chứa chữ và khoản cách");
			txtHo.requestFocus();
			txtHo.selectAll();
			return false;
		}
		else if(!ten.matches("[\\w ]+")) {
			JOptionPane.showMessageDialog(this, "Tên chỉ được chứa chữ và khoản cách");
			txtTen.requestFocus();
			txtTen.selectAll();
			return false;
		}
		try {
			tuoi=Integer.parseInt(txtTuoi.getText().trim());
			if(tuoi<=0) {
				JOptionPane.showMessageDialog(this, "Tuổi phải lớn hơn 0");
				txtTuoi.requestFocus();
				txtTuoi.selectAll();
				return false;
			}
		} catch (Exception e) {
			JOptionPane.showMessageDialog(this, "Tuổi phải là số");
			txtTuoi.requestFocus();
			txtTuoi.selectAll();
			return false;
		}
		try {
			luong=Double.parseDouble(txtTienLuong.getText().trim());
			if(luong<=0) {
				JOptionPane.showMessageDialog(this, "Lương phải lớn hơn 0");
				txtTienLuong.requestFocus();
				txtTienLuong.selectAll();
				return false;
			}
		} catch (Exception e) {
			JOptionPane.showMessageDialog(this, "Lương phải là số");
			txtTienLuong.requestFocus();
			txtTienLuong.selectAll();
			return false;
		}
		return true;
		
	}
	public NhanVien taoDoiTuongTuText() {
		String ma=txtMaNV.getText().trim();
		String ho=txtHo.getText().trim();
		String ten=txtTen.getText().trim();
		int tuoi=Integer.parseInt(txtTuoi.getText().trim());
		boolean phai=!chkNu.isSelected();
		double luong=Double.parseDouble(txtTienLuong.getText().trim());
		PhongBan pb=new PhongBan(cboPhongBan.getSelectedItem().toString());
		return new NhanVien(ma, ho, ten, tuoi, phai, pb, luong);
		
	}
	@Override
	public void actionPerformed(ActionEvent e) {
		Object o=e.getSource();
		if(o.equals(bttThem)) {
			if(checkValidData()) {
				if(nhanVienDao.them(taoDoiTuongTuText())) {
					JOptionPane.showMessageDialog(this, "Thêm nhân viên thành công");
					themDuLieuVaoTable(nhanVienDao.getAll());
					xoaTrang();
				}
				else {
					JOptionPane.showMessageDialog(this, "Không được thêm trùng mã");
				}
			}
		}
		if(o.equals(bttXoaTrang)) {
			xoaTrang();
		}else if(o.equals(bttXoa)) {
			int row=tableNhanVien.getSelectedRow();
			if(row==-1) {
				JOptionPane.showMessageDialog(this, "Vui lòng chọn dòng để xóa");
				return;
			}
			String ma=tableNhanVien.getValueAt(row, 0).toString();
			int confirm=JOptionPane.showConfirmDialog(this, "Xác nhận xóa");
			if(confirm==JOptionPane.YES_OPTION ) {
				if(nhanVienDao.xoa(ma)) {
					JOptionPane.showMessageDialog(this, "Xóa thành công");
					themDuLieuVaoTable(nhanVienDao.getAll());
				}else {
					System.out.println("nah");
				}
			}
			
		}else if(o.equals(bttTim)) {
			String ma=txtTim.getText().trim();
			if(ma.equals("")) {
				themDuLieuVaoTable(nhanVienDao.getAll());
			}
			else {
				if(nhanVienDao.timTheoMa(ma).size()==0) {
					JOptionPane.showMessageDialog(this,"Không tìm thấy");
					themDuLieuVaoTable(nhanVienDao.getAll());
				}else {
					themDuLieuVaoTable(nhanVienDao.timTheoMa(ma));
				}			
			}
		}else if(o.equals(bttLuu)) {
			String ma=cboPhongBan.getSelectedItem().toString();
			themDuLieuVaoTable(nhanVienDao.timTheoMaPhong(ma));
		}
		
	}

	@Override
	public void mouseClicked(MouseEvent e) {
		int row=tableNhanVien.getSelectedRow();
		txtMaNV.setText(tableNhanVien.getValueAt(row,0).toString());
		txtHo.setText(tableNhanVien.getValueAt(row, 1).toString());
		txtTen.setText(tableNhanVien.getValueAt(row, 2).toString();
		
	}

	@Override
	public void mousePressed(MouseEvent e) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mouseReleased(MouseEvent e) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mouseEntered(MouseEvent e) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mouseExited(MouseEvent e) {
		// TODO Auto-generated method stub
		
	}

	

	
}
